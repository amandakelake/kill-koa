{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "outDir": "build",
    "experimentalDecorators": true,
    "lib": [
      "ES2019"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "src"
  ]
}
